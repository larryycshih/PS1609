    <link href="~/Content/bubble_tree/tooltip.css" rel="stylesheet" />



    <script type="text/javascript">

        $(function () {
            var data = {
                label: 'Total',
                amount: @{
                int total = 0;
                foreach (var item in Model) { total += item.count; }
                <text>@total,</text>
                }
                color: '#0066bb',  // color for root node, will be inherited by children
                children: [
                    @foreach (var item in Model){<text>{label: '@item.schoolName', amount: @item.count},</text>}
                ]
            };


            new BubbleTree({
                data: data,
                container: '.bubbletree',
            });
        });

    </script>
}


